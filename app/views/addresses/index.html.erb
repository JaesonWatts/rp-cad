<style>
th {
  padding: 5px;
}
td {
  padding: 5px
}
</style>

<h2><%= current_user.name%>'s Addresses</h2>


<% current_address = Address.where(persona_id: current_user.personas) %>
  
<p>
  <table>
   <b> <tr>
      <th> ID </th>
      <th> Address </th>
      <th> Owner Persona ID </th>
      <th> Description </th>
      <th> Has Interior?</th>
      <th></th>
    </tr>
    <tr>
      <td>-------</td>
      <td>--------------</td>
      <td>-----------------------</td>
      <td>-----------------------</td>
      <td>-------</td>
    </tr></b>
  
    <% current_address.each do |house| %>
 
      <tr>
        <td><%= house.id %></td>
        <td><%= house.address %></td>
        <td><%= house.persona_id %></td>
        <td><%= house.description %></td>
        <td><a href=<%= "/addresses/#{house.id}" %>>View</a></td>
      </tr>
      
    <% end %>
  </table>

</p>
<a href="/addresses/new">Register New Address</a>