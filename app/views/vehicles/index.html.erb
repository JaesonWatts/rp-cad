<h2><%= current_user.name%>'s Vehicles</h2>


<% current_vehicles = Vehicle.where(persona_id: Persona.where(member_id: current_user.id)) %>
 
<p>
  <table>
   <b> <tr>
      <th> ID </th>
      <th> License Plate </th>
      <th> Owner Persona ID </th>
      <th> Type and Description </th>
      <th> Color</th>
      <th></th>
    </tr>
    <tr>
      <td>-------</td>
      <td>--------------</td>
      <td>-----------------------</td>
      <td>-----------------------</td>
      <td>-------</td>
    </tr></b>
    <% current_vehicles.each do |car| %>
  
      <tr>
        <td><%= car.id %></td>
        <td><%= car.plate_number %></td>
        <td><%= car.persona_id %></td>
        <td><%= car.type_description %></td>
        <td><a href=<%= "/vehicles/#{car.id}" %>>View</a></td>
      </tr>
      
    <% end %>
  </table>

</p>
